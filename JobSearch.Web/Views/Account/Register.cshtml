
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="/JobSearch/Content/assets/css/shop-main.css" rel="stylesheet" />

<div class="shop-main login">
    <div class="container">
        <div data-ng-app="ngmodule">
            <div data-ng-controller="ngcontroller">
                <!-- BREADCRUMBS -->
                <ol class="breadcrumb link-accent separator-arrow">
                    <li><a href="~/" title="Home"><i class="fa fa-home"></i></a></li>
                    <li class="active">Register</li>
                </ol>
                <!-- END BREADCRUMBS -->
                <!-- LOGIN BOX -->
                <div class="row">
                    <div class="col-sm-5 col-sm-offset-1 col-lg-4 col-lg-offset-2">
                        <div class="account-box login-box">
                            <h1>Create an account</h1>
                            @*<form class="form-horizontal" ng-submit="register(userData)" role="form" name="form">*@
                            @using (Html.BeginForm("register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", name = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group" ng-class="{ 'has-error': form.email.$dirty && (form.email.$error.required || form.email.$error.email)  }">
                                    <label for="email" class="control-label sr-only">Email</label>
                                    <div class="col-sm-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                            <input type="email" name="email" class="form-control" id="email" placeholder="email" ng-model="userData.Email" ng-required="true" />
                                        </div>
                                        <span ng-show="form.email.$dirty && form.email.$error.required" class="help-block">Email is required</span>
                                        <span ng-show="form.email.$error.email">This is not a valid email.</span>
                                    </div>
                                </div>
                                <div class="form-group" ng-class="{ 'has-error': form.password.$dirty && (form.password.$error.required || form.password.$error.pattern) }">
                                    <label for="password" class="control-label sr-only">Password</label>
                                    <div class="col-sm-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                            <input type="password" name="password" class="form-control" id="password" placeholder="Password" ng-model="userData.Password" ng-required="true" ng-minlength="8" ng-maxlength="20" ng-pattern="/(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z])/" />
                                        </div>
                                        <span ng-show="form.password.$dirty && form.password.$error.required" class="help-block">Password is required</span>
                                        <span ng-show="form.password.$dirty && form.password.$error.pattern" class="help-block">Password should be atleast 8 characters long and should contain one number,one character and one special character</span>
                                    </div>
                                </div>
                                <div class="form-group" ng-class="{ 'has-error': form.confirmpassword.$dirty && (form.confirmpassword.$error.required || form.confirmpassword.$error.passwordVerify ) }">
                                    <label for="password2" class="control-label sr-only">Repeat Password</label>
                                    <div class="col-sm-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                            <input type="password" name="confirmpassword" class="form-control" id="confirmpassword" placeholder="Repeat Password" ng-model="userData.ConfirmPassword" ng-required="true" required data-password-verify="userData.Password" />

                                        </div>
                                        <span ng-show="form.confirmpassword.$dirty && form.confirmpassword.$error.required" class="help-block">Confirm Password is required</span>
                                        <span ng-show="form.confirmpassword.$dirty && form.confirmpassword.$error.passwordVerify" class="help-block">Passwords doesnt match</span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <label class="fancy-checkbox">
                                            <input type="checkbox" checked="checked">
                                            <span>I accept the <a href="#">Terms &amp; Agreement</a></span>
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-6">
                                        <label class="fancy-checkbox">
                                            <input name="employee" ng-control="options" value="1" type="radio" ng-model="userData.Option" ng-checked="true">
                                            <span>I'm a Joob Seeker</span>
                                        </label>
                                    </div>
                                    <div class="col-sm-6">
                                        <label class="fancy-checkbox">
                                            <input name="employer" ng-control="options" value="2" type="radio" ng-model="userData.Option">
                                            <span>I'm an Employer</span>
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <button type="submit" ng-disabled="form.$invalid" class="btn btn-primary btn-block"><i class="fa fa-check-circle"></i> Create Account</button>
                                    </div>
                                </div>
                                @*</form>*@
                            }
                            <p><em>Already have an account?</em> <a href="~/account/login/"><strong>Login</strong></a></p>
                        </div>
                    </div>
                    <div class="col-sm-5 col-lg-4">
                        <div class="login-copytext">
                            <h2><i class="fa fa-lock"></i> Secure Access</h2>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus ac diam interdum, posuere ante quis, pulvinar augue. Etiam id erat id nisi fringilla ultricies in in nulla. </p>
                            <h2><i class="fa fa-user"></i> We protect your privacy</h2>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus ac diam interdum, posuere ante quis, pulvinar augue. Etiam id erat id nisi fringilla ultricies in in nulla. </p>
                        </div>
                    </div>
                </div>
                <!-- END LOGIN BOX -->
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}