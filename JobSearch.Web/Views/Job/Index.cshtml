
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="/JobSearch/Content/assets/css/shop-main.css" rel="stylesheet" />
<div class="shop-header minimal-header"></div>
<div class="shop-main checkout">
    <div class="container ">
        <div data-ng-app="ngmodule">
            <div data-ng-controller="jobcontroller">
                <div class="">
                    <table class="table shopping-cart-table">
                        <thead>
                            <tr>
                                <th>Job Description</th>
                                <th>Skills</th>
                                <th>Client</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr data-ng-repeat="job in jobs">
                                <td class="item">
                                    <div class="media">
                                        <span class="media-left">
                                            {{job.Location}}
                                        </span>
                                        <div class="media-body">
                                            <a href="#" class="product-title">{{job.Title}}</a>
                                            <span class="brief-desc">{{job.JobDescription}}</span>
                                        </div>
                                    </div>
                                </td>
                                <td class="unit-price">{{job.TechnicalSkills}}</td>
                                <td class="total-price">{{job.Client}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
